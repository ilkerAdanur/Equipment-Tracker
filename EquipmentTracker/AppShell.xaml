<Shell
    x:Class="EquipmentTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EquipmentTracker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Equipment Tracker">

    <TabBar>

        <Tab Title="Dashboard">
            <ShellContent
                Title="İstatistikler"
                ContentTemplate="{DataTemplate local:DashboardPage}"
                Route="DashboardPage" />
        </Tab>

        <Tab Title="Ana Sayfa">
            <ShellContent
                Title="Tüm İşler"
                ContentTemplate="{DataTemplate local:JobListPage}"
                Route="JobListPage" />
        </Tab>

        <Tab Title="Yeni İş Ekle">
            <ShellContent
                Title="Yeni İş Ekle"
                ContentTemplate="{DataTemplate local:AddNewJobPage}"
                Route="AddNewJobPage" />
        </Tab>

        <Tab Title="Ayarlar">
            <ShellContent
                Title="Ayarlar"
                ContentTemplate="{DataTemplate local:SettingsPage}"
                Route="SettingsPage" />
        </Tab>

        <Tab x:Name="AdminTab" Title="Kullanıcı Yönetim" IsVisible="False">
            <ShellContent
                Title="Kullanıcı Yönetim"
                ContentTemplate="{DataTemplate local:UserManagementPage}"
                Route="UserManagementPage" />
        </Tab>

        <Tab Title="Hakkında">
            <ShellContent
                Title="Hakkında"
                ContentTemplate="{DataTemplate local:AboutPage}"
                Route="AboutPage" />
        </Tab>
        

    </TabBar>

</Shell>
