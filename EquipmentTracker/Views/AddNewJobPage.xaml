<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EquipmentTracker.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="EquipmentTracker.Views.AddNewJobPage"
             x:DataType="vm:AddNewJobViewModel"
             Title="{Binding Title}">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Loaded"
            Command="{Binding LoadNextJobNumberCommand}" />
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="Yeni İş Formu" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

            <Label Text="İş No:" FontSize="Small" />
            <Label Text="{Binding JobNumber}" 
                   FontSize="Medium" 
                   FontAttributes="Bold"
                   BackgroundColor="{StaticResource Gray200}"
                   Padding="10"/>

            <Label Text="İş Adı:" FontSize="Small" />
            <Entry Text="{Binding JobName}" Placeholder="Örn: ANKARA SU ARITMA" />

            <Label Text="İş Sahibi:" FontSize="Small" />
            <Entry Text="{Binding JobOwner}" Placeholder="Örn: ASKİ" />

            <Label Text="Ekleyen Kişi:" FontSize="Small" Margin="0,10,0,0"/>
            <Entry Text="{Binding CreatorName}" Placeholder="Adınız Soyadınız (Zorunlu)" />

            <Label Text="Yetkiniz/Rolünüz:" FontSize="Small" />
            <Entry Text="{Binding CreatorRole}" Placeholder="Örn: Proje Yöneticisi (Opsiyonel)" />

            <Label Text="İş Açıklaması:" FontSize="Small" />
            <Editor Text="{Binding JobDescription}" Placeholder="İşle ilgili kısa açıklama... (Opsiyonel)" HeightRequest="100" />
            <Label Text="Tarih:" FontSize="Small" />
            <DatePicker Date="{Binding Date}" Format="dd/MM/yyyy" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0" 
                        Text="İptal" 
                        Command="{Binding CancelCommand}"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="Black"/>
                <Button Grid.Column="1" 
                        Text="Kaydet" 
                        Command="{Binding SaveJobCommand}" 
                        BackgroundColor="Green"
                        TextColor="White"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>